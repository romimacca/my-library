<p id="notice"><%= notice %></p>

<h1>Books</h1>

<%= search_form_for @q do |f| %> 
  <div class="form-group">
    <%= f.label :status_eq, "Status" %>
    <%= f.select :status_eq, options_for_select(Book.statuses, @q.status_eq), {}, {class: "form-control"} %> 
  </div>
  <%= f.submit "Filter", class: "btn btn-primary" %> 
  <%= link_to 'Limpiar filtro', root_path, {class: "btn btn-outline-secondary"}%>

<% end %>

<table class="table table-bordered">
  <thead  class="thead-light">
    <tr>
      <th><%= sort_link(@q, :title) %></th>
      <th>Author</th>
      <th>Status</th>
      <th>Borrowed at</th>
      <th>Returned at</th>
      <th>Lent to</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.status %></td>
        <td><%= book.borrowed_at %></td>
        <td><%= book.returned_at %></td>
        <td><%= book.lent_to %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path, {class: "btn btn-outline-primary"}%>

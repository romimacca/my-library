<%= form_with(model: book, local: true) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class:"form-control"  %>
  </div>

  <div class="field form-group">
    <%= form.label :author %>
    <%= form.text_field :author, class:"form-control"%>
  </div>

  <div class="field form-group">
    <%= form.label :status %>
    <%= form.select :status, Book.statuses.keys, {class:'form-control'} %>
  </div>

  <div class="field form-group">
    <%= form.label :borrowed_at %>
    <%= form.datetime_field :borrowed_at, class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :returned_at %>
    <%= form.datetime_field :returned_at, include_blank:true, class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :lent_to %>
    <%= form.text_field :lent_to, include_blank:true, class:"form-control" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
